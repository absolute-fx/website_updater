{
  "name": "website_updater",
  "version": "1.0.0",
  "description": "Mise Ã  jour du slideshow du site web Vietamine",
  "main": "main.js",
  "build": {
    "appId": "com.my.app",
    "publish": [
      {
        "provider": "github",
        "owner": "AfxLab",
        "repo": "website_updater"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "installerHeaderIcon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "contents": [
        {
          "x": 345,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 125,
          "y": 150,
          "type": "file"
        }
      ]
    }
  },
  "scripts": {
    "start": "electron app/main.js",
    "test": "xo",
    "build": "electron-packager app/ --out=dist --asar --overwrite --all",
    "clean": "rm -rf dist",
    "clean:mac": "rm -rf dist/mac",
    "clean:win": "rm -rf dist/win",
    "dist:mac": "build --mac",
    "dist:win": "build --win",
    "dist": "npm run clean && npm run dist:mac && npm run dist:win"
  },
  "author": "AfxLab",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "electron-is-dev": "^0.3.0",
    "electron-log": "^2.2.7",
    "electron-updater": "^2.8.7",
    "jquery": "^3.2.1",
    "mysql": "^2.14.1",
    "sha1": "^1.1.1"
  },
  "devDependencies": {
    "asar": "^0.13.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.6",
    "electron-builder": "^19.24.1",
    "electron-debug": "^1.4.0",
    "electron-packager": "^8.7.2",
    "xo": "^0.18.2"
  }
}
